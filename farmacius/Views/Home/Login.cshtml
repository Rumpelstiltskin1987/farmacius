@model farmacius.Models.Login
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <div class="text-center"> <h1 class="display-4">Inicio de Sesión</h1> </div>
                </div>
                <div class="card-body">
                    <form asp-action="Index">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div><br />
                        <table>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                                    </div>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="RememberMe"> <input asp-for="RememberMe" /> Recordarme</label>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <label class="text-danger">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                            ¿Olvidaste tu contraseña?
                        </a>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        // Código JavaScript para ocultar el menú en la vista de Login
        $(document).ready(function() {
                var inicio = document.getElementById('inicio');
                var alta = document.getElementById('alta');
                var venta = document.getElementById('venta');
                var main = document.getElementById('main');
                alta.style.display = 'none';
                venta.style.display = 'none';
                main.style.display = 'none';
                var msgError = '@ViewBag.Error'; }
                if (msgError!= "")
                {
                    alert(msgError);                
                }
        });
    </script>
}